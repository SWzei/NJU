# Backend runtime
HOST=127.0.0.1
PORT=3000
NODE_ENV=production
SERVE_FRONTEND=true

# Security
JWT_SECRET=replace-with-strong-secret
ALLOWED_ORIGINS=https://linquanpiano.cn,https://www.linquanpiano.cn

# Database
# Prefer PostgreSQL in production.
DATABASE_URL=postgresql://linquan_app:ChangeThisStrongPassword!@127.0.0.1:5432/linquan?sslmode=disable

# SQLite fallback (only used when DATABASE_URL is empty)
DB_PATH=/var/www/linquan/data/linquan.db

# Upload storage
UPLOAD_ROOT=/var/www/linquan/uploads

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="NJU林泉钢琴社 <no-reply@linquanpiano.cn>"

# Postgres worker tuning (optional)
PG_QUERY_TIMEOUT_MS=60000
PG_POOL_MAX=4
PG_IDLE_TIMEOUT_MS=30000
PG_CONNECT_TIMEOUT_MS=10000
